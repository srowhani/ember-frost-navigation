{{#if route}}
  {{#frost-link
    hook=(concat hook '-link')
    options=(hash
      route=route
      routeModels=routeModels
      routeQueryParams=routeQueryParams
    )
  }}
    <div class='content'>
      <div class='nav-route-icon'>
        {{frost-icon
          hook=(concat hook '-link-icon')
          pack=pack
          icon=icon
          isVisible=iconVisible
        }}
      </div>
      <div>
        <div class='nav-route-name'>
          {{name}}
        </div>
        <div class='nav-route-description'>
          {{description}}
        </div>
      </div>
    </div>
  {{/frost-link}}
{{else}}
  <a
    class='frost-link'
    href='{{url}}'
    target="{{if tabbed '_blank'}}"
    data-test={{hook (concat hook '-link')}}>
    <div class='content'>
      <div class='nav-route-icon'>
        {{frost-icon
          hook=(concat hook '-link-icon')
          pack=pack
          icon=icon
          isVisible=iconVisible
        }}
      </div>
      <div>
        <div class='nav-route-name'>
          {{name}}
        </div>
        <div class='nav-route-description'>
          {{description}}
        </div>
      </div>
    </div>
  </a>
{{/if}}
